{
  "name": "backend",
  "version": "1.0.50",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:logs": "docker-compose logs postgres",
    "db:stop": "docker-compose stop postgres",
    "db:start": "docker-compose start postgres",
    "db:restart": "docker-compose restart postgres",
    "db:connect": "docker exec -it restaurant-app-db psql -U restaurantuser -d restaurantdb"
  },
  "dependencies": {
    "@elysiajs/swagger": "^1.1.6",
    "dotenv": "^16.4.5",
    "elysia": "latest",
    "pg": "^8.13.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.5"
  },
  "devDependencies": {
    "@types/sequelize": "^4.28.20",
    "bun-types": "latest",
    "sequelize-cli": "^6.6.2"
  },
  "module": "src/index.js"
}
